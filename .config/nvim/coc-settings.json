{
    "clangd.semanticHighlighting": true,

    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact",
        "css",
        "html"
    ],

    "prettier.singleQuote": true,

    "latex.build.args": [
        "-xelatex",
        "-interaction=nonstopmode",
        "-synctex=1"
    ],
    "latex.build.onSave": true,

    "java.home": "/usr/lib/jvm/default-runtime"
}
