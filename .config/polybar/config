[module/quicksettings]
type=custom/script
format = "<label>"
format-underline = ${colors.blue}
format-background = #80A0FF
format-foreground = ${colors.foreground}
format-prefix = 
format-prefix-foreground = ${self.format-background}
format-prefix-background = #00000000
format-margin-right = 1
format-suffix = 
format-suffix-foreground = ${self.format-background}
format-suffix-background = #00000000
;format-margin = 1
;format-padding = 2
exec = echo ""

click-left = "/home/josep/script/rofi/quickSettings/quickSettings.sh"

;==========================================================

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false

format = <label-state><label-mode>
format-prefix = 
format-prefix-foreground = ${self.label-unfocused-background}
format-suffix = 
format-suffix-foreground = ${self.label-unfocused-background}

ws-icon-0 = 1;一
ws-icon-1 = 2;二
ws-icon-2 = 3;三
ws-icon-3 = 4;四
ws-icon-4 = 5;五
ws-icon-5 = 6;六
ws-icon-6 = 7;七
ws-icon-7 = 8;八
ws-icon-8 = 9;九
ws-icon-9 = 10;十

; Only show workspaces on the same output as the bar
pin-workspaces = true

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.blue}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-background = ${colors.lgray}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-unfocused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

; label-mode (move, resize, etc)
label-mode-padding = 2
label-mode-background = ${self.label-unfocused-background}

; separator
;label-separator = |

